{
  "name": "food-waste-reduction-app",
  "version": "1.0.0",
  "description": "Comprehensive food waste reduction application with MCP server integration and AI features",
  "main": "backend/src/server.ts",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\" \"npm run mcp-server:dev\"",
    "build": "npm run backend:build && npm run frontend:build && npm run mcp-server:build",
    "start": "concurrently \"npm run backend:start\" \"npm run mcp-server:start\"",
    "backend:dev": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "backend:start": "cd backend && npm run start",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:start": "cd frontend && npm run start",
    "mcp-server:dev": "cd mcp-server && npm run dev",
    "mcp-server:build": "cd mcp-server && npm run build",
    "mcp-server:start": "cd mcp-server && npm run start",
    "test": "npm run test:backend && npm run test:frontend && npm run test:mcp-server",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "test:mcp-server": "cd mcp-server && npm run test",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "cd frontend && npm run test:e2e",
    "lint": "npm run lint:backend && npm run lint:frontend && npm run lint:mcp-server",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:mcp-server": "cd mcp-server && npm run lint",
    "format": "npm run format:backend && npm run format:frontend && npm run format:mcp-server",
    "format:backend": "cd backend && npm run format",
    "format:frontend": "cd frontend && npm run format",
    "format:mcp-server": "cd mcp-server && npm run format",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "db:migrate:test": "cd backend && npm run db:migrate:test",
    "db:seed:test": "cd backend && npm run db:seed:test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit"
  },
  "keywords": [
    "food-waste",
    "inventory-management",
    "recipe-suggestion",
    "mcp-server",
    "ai-integration",
    "typescript",
    "react",
    "nodejs"
  ],
  "author": "Food Waste Reduction Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1"
  },
  "workspaces": [
    "backend",
    "frontend",
    "mcp-server"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/food-waste-reduction/app.git"
  },
  "bugs": {
    "url": "https://github.com/food-waste-reduction/app/issues"
  },
  "homepage": "https://github.com/food-waste-reduction/app#readme"
}
